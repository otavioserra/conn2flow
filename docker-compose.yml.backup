services:
  # Aplicação conn2flow
  app:
    build: .
    container_name: conn2flow-app
    ports:
      - "80:80"
    volumes:
      # Simula estrutura cPanel: /home/usuario/
      - ./gestor:/home/conn2flow/sistema-instalado
      - ./gestor-instalador:/var/www/html/gestor-instalador
      - ./cpanel:/home/conn2flow/cpanel
      - ./gestor-cliente:/home/conn2flow/gestor-cliente
      # Pasta pública (acessível via web)
      - ./public_html:/var/www/html
    environment:
      - APACHE_DOCUMENT_ROOT=/var/www/html
      - PHP_INI_SCAN_DIR=/usr/local/etc/php/conf.d
    depends_on:
      - mysql
    networks:
      - conn2flow-network

  # Banco de dados MySQL
  mysql:
    image: mysql:8.0
    container_name: conn2flow-mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: root123
      MYSQL_DATABASE: conn2flow
      MYSQL_USER: conn2flow_user
      MYSQL_PASSWORD: conn2flow_pass
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./gestor/db/conn2flow-schema.sql:/docker-entrypoint-initdb.d/01-schema.sql
    networks:
      - conn2flow-network

  # phpMyAdmin para administração do banco
  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    container_name: conn2flow-phpmyadmin
    restart: unless-stopped
    environment:
      PMA_HOST: mysql
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: root123
    ports:
      - "8081:80"
    depends_on:
      - mysql
    networks:
      - conn2flow-network

volumes:
  mysql_data:
    driver: local

networks:
  conn2flow-network:
    driver: bridge

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "📦 Docker - Status dos Containers",
            "type": "shell",
            "command": "docker ps"
        },
        {
            "label": "📦 Docker - PHP Version",
            "type": "shell",
            "command": "docker exec conn2flow-app bash -c \"php -v\""
        },
        {
            "label": "📦 Docker - Logs Apache > 50 Linhas",
            "type": "shell",
            "command": "docker logs conn2flow-app --tail 50"
        },
        {
            "label": "📦 Docker - Logs Apache > Tempo Real",
            "type": "shell",
            "command": "docker logs conn2flow-app --tail 50 --follow"
        },
        {
            "label": "📦 Docker - Logs PHP Truncate",
            "type": "shell",
            "command": "docker exec conn2flow-app bash -c \"truncate -s 0 /var/log/php_errors.log\""
        },
        {
            "label": "📦 Docker - Logs PHP > 50 Linhas",
            "type": "shell",
            "command": "docker exec conn2flow-app bash -c \"tail -50 /var/log/php_errors.log\""
        },
        {
            "label": "📦 Docker - Logs PHP > Tempo Real",
            "type": "shell",
            "command": "docker exec conn2flow-app bash -c \"tail -f /var/log/php_errors.log\""
        },
        {
            "label": "🔧 Instalador - GIT Release",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/releases/release-instalador.sh ${input:tipo} \"${input:tagMsg}\" \"${input:commitMsg}\""
        },
        {
            "label": "🔧 Instalador - Sincronizar",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/dev-environment/sincroniza-gestor-instalador.sh checksum"
        },
        {
            "label": "🔧 Instalador - Build Local",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/updates/build-local-gestor-instalador.sh"
        },
        {
            "label": "🔧 Instalador - Nova Instalação Local",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/dev-environment/criar-nova-instalacao.sh"
        },
        {
            "label": "🛠️ Gestor - GIT Release",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/releases/release.sh ${input:tipo} \"${input:tagMsg}\" \"${input:commitMsg}\""
        },
        {
            "label": "🛠️ Gestor - GIT Commit",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/commits/commit.sh \"${input:commitMsg}\""
        },
        {
            "label": "🛠️ Gestor - Sincronizar => Recursos - Local",
            "type": "shell",
            "command": "php ./gestor/controladores/agents/arquitetura/atualizacao-dados-recursos.php"
        },
        {
            "label": "🛠️ Gestor - Sincronizar => Banco de Dados - Ambiente de Testes",
            "type": "shell",
            "command": "docker exec conn2flow-app bash -c \"php /var/www/sites/localhost/conn2flow-gestor/controladores/atualizacoes/atualizacoes-banco-de-dados.php --debug --log-diff\""
        },
        {
            "label": "🛠️ Gestor - Sincronizar => Arquivos - Ambiente de Testes",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/dev-environment/sincroniza-gestor.sh checksum"
        },
        {
            "label": "🛠️ Gestor - Build Local",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/updates/build-local-gestor.sh"
        },
        {
            "label": "🛠️ Gestor - Criar Módulo",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/dev-environment/criar-novo-modulo.sh \"${input:moduloID}\""
        },
        {
            "label": "🛠️ Gestor - Atualizar => Tudo - Ambiente de Testes",
            "dependsOn": [
                "🛠️ Gestor - Sincronizar => Recursos - Local",
                "🛠️ Gestor - Sincronizar => Arquivos - Ambiente de Testes",
                "🛠️ Gestor - Sincronizar => Banco de Dados - Ambiente de Testes"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "🧩 Plugins Privado - Sincronizar Plugin Ativo",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/private/scripts/dev/synchronizes.sh checksum"
        },
        {
            "label": "🧩 Plugins Privado - Build Local Plugin Ativo",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/updates/build-local-gestor-plugin.sh --type=private"
        },
        {
            "label": "🧩 Plugins Privado - Recursos Plugin",
            "type": "shell",
            "command": "php ./dev-plugins/plugins/private/scripts/resources/update-data-resources-plugin.php"
        },
        {
            "label": "🧩 Plugins Privado - GIT Release",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/private/scripts/releases/release.sh ${input:tipo} \"${input:tagMsg}\" \"${input:commitMsg}\""
        },
        {
            "label": "🧩 Plugins Privado - GIT Commit",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/private/scripts/commits/commit.sh \"${input:commitMsg}\""
        },
        {
            "label": "🧩 Plugins Público - Sincronizar Plugin Ativo",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/public/scripts/dev/synchronizes.sh checksum"
        },
        {
            "label": "🧩 Plugins Público - Build Local Plugin Ativo",
            "type": "shell",
            "command": "bash ./ai-workspace/scripts/updates/build-local-gestor-plugin.sh"
        },
        {
            "label": "🧩 Plugins Público - Recursos Plugin",
            "type": "shell",
            "command": "php ./dev-plugins/plugins/public/scripts/resources/update-data-resources-plugin.php"
        },
        {
            "label": "🧩 Plugins Público - GIT Release",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/public/scripts/releases/release.sh ${input:tipo} \"${input:tagMsg}\" \"${input:commitMsg}\""
        },
        {
            "label": "🧩 Plugins Público - GIT Commit",
            "type": "shell",
            "command": "bash ./dev-plugins/plugins/public/scripts/commits/commit.sh \"${input:commitMsg}\""
        }
    ],
    "inputs": [
        {
            "id": "tipo",
            "description": "✔️ Tipo de Release (patch, minor, major) ❔",
            "type": "promptString"
        },
        {
            "id": "tagMsg",
            "description": "🔖 Mensagem da TAG ❔",
            "type": "promptString"
        },
        {
            "id": "commitMsg",
            "description": "📦 Mensagem do Commit ❔",
            "type": "promptString"
        },
        {
            "id": "moduloID",
            "description": "📦 ID do Módulo ❔",
            "type": "promptString"
        }
    ]
}